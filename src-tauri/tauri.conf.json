{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BioCopilot",
  "version": "2.0.0",
  "identifier": "com.biocopilot.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "BioCopilot",
        "width": 1200,
        "height": 800,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [],
    "resources": [
      "../assets/**/*",
      "binaries/bio-engine-aarch64-apple-darwin/**/*",
      "binaries/bio-engine-x86_64-apple-darwin/**/*",
      "binaries/bio-engine-x86_64-pc-windows-msvc/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}